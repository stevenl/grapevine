% title 'Ask a Question';
% layout 'default';

<h2>Ask a Question</h2>

<form action=<%= url_for 'submit_question' %> method="post">
  <p>
    <label for="title">Title</label>
    <input name="title" type="text" size="110" maxlength="255" />
  </p>
  <p><textarea name="description" rows="10" style="width:100%"></textarea></p>

  <p><input type="submit" value="Post Your Question" /></p>
</form>
